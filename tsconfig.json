{
  "extends": "@tsconfig/node16",
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "removeComments": true,
    "importHelpers": true,
    "strict": true,
    "importsNotUsedAsValues": "error",
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist"
  },
  "include": ["src"]
}
